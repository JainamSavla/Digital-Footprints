{
    "manifest_version": 2,
    "name": "Digital Footprints",
    "version":"1.0.0",
    "description":"Keeps track of time spent on the Internet",
     "icons": { 
        "128": "icons/digital-footprint.png"
    },
    "background": {
        "scripts": ["background.js"],
        "persistent": true
    },
   "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
        "16": "icons/digital-footprint.png"
    },
    "default_title": "Digital Footprints" 
    },

    "permissions": [
        "tabs",
        "activeTab",
        "storage",
        "webNavigation"
    ]
}